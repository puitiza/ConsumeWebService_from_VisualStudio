<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/layout_item_order"
card_view:cardCornerRadius="6dp"
card_view:cardElevation="3dp"
android:background="#ffffff"
card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8/25/1997"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/orderID"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10643"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/shipAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Obere Str. 57"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/shipCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Berlin"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/shipName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Alfreds Futterkiste"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/shipPostcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="12209"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shippedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_gravity="right"
            android:text="10/13/1997"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>